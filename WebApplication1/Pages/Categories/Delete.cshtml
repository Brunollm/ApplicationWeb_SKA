@page
@model WebApplication1.Pages.Categories.DeleteModel@{
}

<form method="post">
    <input hidden asp-for="taskControl.id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Deletar Tarefa</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="taskControl.Name"></label>
            <input asp-for="taskControl.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="taskControl.Description"></label>
            <input asp-for="taskControl.Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="taskControl.DisplayOrder"></label>
            <input asp-for="taskControl.DisplayOrder" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="taskControl.Status"></label>
            <input asp-for="taskControl.Status" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Excluir</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Voltar</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}